---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, title, institute, profilePicture} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome! I'm <span class='text-secondary'>{fullName}</span>
  </h1>
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Computational Mathematician | AI Researcher | Open Source Contributor
  </p>
  <p class='text-lg mb-6'>
    Open to collaborations in machine learning, data science, and scientific computing.
  </p>
  <p class='text-lg mb-6'>
    Check out my latest video here: <a href="https://www.youtube.com/@EddieInTech" class="text-lg text-primary hover:underline mb-6 inline-block">
    YouTube channel.</a>
  </p>
  
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='size-72 lg:block hidden'>
  <!-- Add your profile image -->
  <Image
    src={profilePicture}
    alt={fullName}
    class='w-full h-full mask mask-circle size-44'
  />
</div>
